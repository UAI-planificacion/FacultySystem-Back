{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2021",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "@app/*"                : ["src/*"],
            "@config/*"             : ["src/config/*"],
            "@faculties/*"          : ["src/faculties/*"],
            "@subjects/*"           : ["src/subjects/*"],
            "@staff/*"              : ["src/staff/*"],
            "@requests/*"           : ["src/requests/*"],
            "@request-details/*"    : ["src/request-details/*"],
            "@sse/*"                : ["src/sse/*"],
            "@comments/*"           : ["src/comments/*"]
        },
        "incremental": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": false,
        "strictBindCallApply": false,
        "noFallthroughCasesInSwitch": false
    }
}
