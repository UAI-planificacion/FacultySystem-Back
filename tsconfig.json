{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2021",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "@app/*"                : ["src/*"],
            "@config/*"             : ["src/config/*"],
            "@faculties/*"          : ["src/faculties/*"],
            "@subjects/*"           : ["src/subjects/*"],
            "@staff/*"              : ["src/staff/*"],
            "@requests/*"           : ["src/requests/*"],
            "@request-details/*"    : ["src/request-details/*"],
            "@sse/*"                : ["src/sse/*"],
            "@comments/*"           : ["src/comments/*"],
            "@grades/*"             : ["src/grades/*"],
            "@offers/*"             : ["src/offers/*"],
            "@days/*"               : ["src/days/*"],
            "@modules/*"            : ["src/modules/*"],
            "@periods/*"            : ["src/periods/*"],  
            "@professors/*"         : ["src/professors/*"],
            "@sections/*"           : ["src/sections/*"],
            "@sizes/*"              : ["src/sizes/*"],
            "@sessions/*"             : ["src/sessions/*"],
        },
        "incremental": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": false,
        "strictBindCallApply": false,
        "noFallthroughCasesInSwitch": false
    }
}
